 @inherits LayoutComponentBase

<div class="page">
	<div class="sidebar">
		<NavMenu />
	</div>

	<main>
		<div class="top-row px-4" style="height: 80px;">
			<img src="/images/user.png" style="height: 55px" />
		</div>
		<article class="content px-4">
			@Body
		</article>
	</main>
</div>

<div id="blazor-error-ui" data-nosnippet>
	An unhandled error has occurred.
	<a href="." class="reload">Reload</a>
	<span class="dismiss">🗙</span>
</div>

<MudThemeProvider Theme="@LightTheme" IsDarkMode="false" />

@code {
	private MudTheme LightTheme = new MudTheme()
		{
			PaletteLight = new PaletteLight()
			{
				Background = Colors.Shades.White,
				Surface = Colors.Shades.White,
				TextPrimary = Colors.Gray.Darken4,
				Primary = Colors.Gray.Darken4
			}
		};
}

